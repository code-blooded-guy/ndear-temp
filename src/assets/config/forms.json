        {
            "student-education": {
                "api": "/Student",
                "type": "property:educationDetails",
                "redirectTo": "/profile/student",
                "fieldsets": [
                    {
                        "definition": "EducationType",
                        "privacyConfig": "AffiliationOsConfig",
                        "fields": [
                            {
                                "name": "instituteOSID",
                                "custom": true,
                                "element": {
                                    "widget": {
                                        "formlyConfig": {
                                            "type": "input",
                                            "templateOptions": {
                                                "type": "hidden"
                                            }
                                        }
                                    }
                                }
                            },
                            {
                                "name": "institute",
                                "required": true,
                                "type": "autocomplete",
                                "api": "/Institute/search",
                                "key": "instituteName",
                                "value": "instituteName",
                                "autofill": {
                                    "apiURL": "https://ndear.xiv.in/registry/api/v1/Institute/search",
                                    "method": "POST",
                                    "body": {
                                        "filters": {
                                            "instituteName": {
                                                "contains": "{{value}}"
                                            }
                                        },
                                        "limit": 20,
                                        "offset": 0
                                    },
                                    "fields": [
                                        {
                                            "instituteOSID": "osid"
                                        }
                                    ],
                                    "dropdowns": [
                                        {
                                            "class": "affiliation[0].classes"
                                        }
                                    ]
                                }
                            },
                            {
                                "name": "board",
                                "required": true,
                                "enum": [{"label": "CBSE Board", "value": "board-cbse"}]
                            },
                            {
                                "name": "medium",
                                "required": true
                            },
                            {
                                "name": "class",
                                "required": true
                            },
                            {
                                "name": "documents",
                                "format": "file",
                                "multiple": true
                            },
                            {
                                "name": "attest",
                                "custom": true,
                                "element": {
                                    "title": "Send for attestation?",
                                    "widget": {
                                        "formlyConfig": {
                                            "type": "checkbox",
                                            "fieldGroupClassName": "controls",
                                            "className": "checkbox",
                                            "templateOptions": {
                                                "required": true
                                            }
                                        }
                                    }
                                }
                            },
                            {
                                "name": "notes",
                                "custom": true,
                                "element": {
                                    "title": "Note",
                                    "widget": {
                                        "formlyConfig": {
                                            "type": "string",
                                            "fieldGroupClassName": "controls",
                                            "className": "input",
                                              "hideExpression": "!model.attest"
                                        }
                                    }
                                }
                            }
                        ]
                    }
                ]
            }
        }
    ]
