                                    "fields": [
                                        {
                                            "name": "fullName",
                                            "required": true
                                        },
                                        {
                                            "name": "gender",
                                            "required": true
                                        },
                                        {
                                            "name": "dob",
                                            "required": true,
                                            "type": "date"
                                        },
                                        {
